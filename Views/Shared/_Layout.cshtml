@using WebShop.Models;

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title</title>
    <!-- Einbindung von Bootstrap JavaScript-Bibliotheken -->
    <script src="~/Scripts/bootstrap.bundle.js"></script>
    <script src="~/Scripts/bootstrap.bundle.min.js"></script>
    <!-- Einbindung von CSS-Dateien -->
    @Styles.Render("~/Content/css")
    <!-- Einbindung von Modernizr-Bibliothek -->
    @Scripts.Render("~/bundles/modernizr")
    <!-- Einbindung von jQuery-Bibliothek -->
    <script src="~/Scripts/jquery-3.4.1.min.js"></script>
    <!-- Einbindung von Bootstrap CSS von einem CDN -->
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.1/css/bootstrap.min.css">
    <!-- Einbindung von Bootstrap JavaScript von einem CDN -->
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.1/js/bootstrap.min.js"></script>
    <!-- Einbindung von Font Awesome CSS von einem CDN -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
    <!-- Einbindung eines Favicon -->
    <link rel="shortcut icon" type="image/x-icon" href="/WebShopIcon.png">
    <!-- Einbindung von jQuery Validate Bibliotheken -->
    <script src="@Url.Content("~/Scripts/jquery.validate.min.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.min.js")" type="text/javascript"></script>
</head>
<body>
    <!-- Navigation Bar -->
    <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-dark bg-dark">
        <div class="container">
            <!-- Logo und Link zur Startseite -->
            <a href="/Product/Index"> <img src="/WebShopIcon.png" style="width:40px" /></a>

            <!-- Link zur Startseite mit dem Namen der Firma -->
            @Html.ActionLink("Fiktiv GmbH", "Index", "Product", new { area = "" }, new { @class = "navbar-brand" })
            <!-- Button für die Navigation im mobilen Modus -->
            <button type="button" class="navbar-toggler" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" title="Toggle navigation" aria-controls="navbarSupportedContent"
                    aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse d-sm-inline-flex justify-content-between">
                <!-- Navigationselemente basierend auf der Benutzerrolle -->
                @if (ViewBag.UserRole == (int)WebShop.Models.Enum.UserRoleEnum.Employee) // Mitarbeiter
                {
                    <ul class="navbar-nav flex-grow-1">
                        <li>@Html.ActionLink("Artikel", "Index", "Product", new { area = "" }, new { @class = "nav-link" })</li>
                        <li>@Html.ActionLink("Bestellverlauf", "Index", "Order", new { area = "" }, new { @class = "nav-link" })</li>
                    </ul>
                    <!-- Einbindung des Warenkorbs -->
                    @Html.Partial("_ShoppingCart")
                }
                else if (ViewBag.UserRole == (int)WebShop.Models.Enum.UserRoleEnum.TeamLeaders) // Teamleiter
                {
                    <ul class="navbar-nav flex-grow-1">
                        <li>@Html.ActionLink("Artikel", "Index", "Product", new { area = "" }, new { @class = "nav-link" })</li>
                        <li>@Html.ActionLink("Bestellverlauf", "Index", "Order", new { area = "" }, new { @class = "nav-link" })</li>
                        <li>@Html.ActionLink("Mitarbeiterverwaltung", "EmployeeManagement", "Employee", new { area = "" }, new { @class = "nav-link" })</li>
                    </ul>
                    <!-- Einbindung des Warenkorbs -->
                    @Html.Partial("_ShoppingCart")
                }
                else if (ViewBag.UserRole == (int)WebShop.Models.Enum.UserRoleEnum.Admins) // Administratoren
                {
                    <ul class="navbar-nav flex-grow-1">
                        <li>@Html.ActionLink("Artikel", "Index", "Product", new { area = "" }, new { @class = "nav-link" })</li>
                        @*<li>@Html.ActionLink("Bestellverlauf", "Index", "Order", new { area = "" }, new { @class = "nav-link" })</li>*@
                        <li>@Html.ActionLink("Mitarbeiterverwaltung", "EmployeeManagement", "Employee", new { area = "" }, new { @class = "nav-link" })</li>
                    </ul>
                }
                else if (ViewBag.UserRole == (int)WebShop.Models.Enum.UserRoleEnum.MasterDataManager) // Stammdatenmanager
                {
                    <ul class="navbar-nav flex-grow-1">
                        <li>@Html.ActionLink("Artikel", "Index", "Product", new { area = "" }, new { @class = "nav-link" })</li>
                        @*<li>@Html.ActionLink("Bestellverlauf", "Index", "Order", new { area = "" }, new { @class = "nav-link" })</li>*@
                        @*<li>@Html.ActionLink("Mitarbeiterverwaltung", "EmployeeManagement", "Employee", new { area = "" }, new { @class = "nav-link" })</li>*@
                        <li>@Html.ActionLink("Warenbestand", "ItemDetails", "Item", new { area = "" }, new { @class = "nav-link" })</li>
                    </ul>
                }
                else if (ViewBag.UserRole == (int)WebShop.Models.Enum.UserRoleEnum.WarehouseWorkers) // Lagerarbeiter
                {
                    <ul class="navbar-nav flex-grow-1">
                        <li>@Html.ActionLink("Artikel", "Index", "Product", new { area = "" }, new { @class = "nav-link" })</li>
                        @*<li>@Html.ActionLink("Bestellverlauf", "Index", "Order", new { area = "" }, new { @class = "nav-link" })</li>*@
                        <li>@Html.ActionLink("Lagerverwaltung", "Index", "Stock", new { area = "" }, new { @class = "nav-link" })</li>
                    </ul>
                }

            </div>
            <!-- Abmelden-Link -->
            <a class="nav-link" href="/account/signout/" style="color:white; margin-left:30px">Abmelden</a>
        </div>
    </nav>
    <div class="container body-content">
        <div>
            <!-- Warnmeldung, die standardmäßig ausgeblendet ist -->
            <div class="alert alert-danger mt-3" id="msgDiv" style="display: none">
                <strong>Warning!</strong>
                <span>Better check yourself, you're not looking too good.</span>
            </div>
        </div>

        <!-- Anzeige von Benutzermeldungen, falls vorhanden -->
        @if (TempData["UserMessage"] != null)
        {
            var message = (MessageVM)TempData["UserMessage"];
            <div class="mt-3 alert @message.CssClassName">
                <strong>@message.Title</strong>
                @message.Message
            </div>
        }
        <!-- Platzhalter für den Hauptinhalt der Seite -->
        @RenderBody()
    </div>
    <hr />
    <!-- Footer -->
    <footer class="bg-dark">
        <p class="mt-3" style="color: #f5f5f58a">&copy; @DateTime.Now.Year - Fiktiv GmbH Application</p>
    </footer>

    <!-- Einbindung von jQuery und Bootstrap JavaScript-Bundles -->
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    <!-- Platzhalter für zusätzliche Skripte -->
    @RenderSection("scripts", required: false)

    <script type="text/javascript">
        // Funktion zum Anzeigen von Warnmeldungen
        function ShowAlert(msg_title, msg_body, msg_type) {
            var AlertMsg = $('#msgDiv');
            $(AlertMsg).find('strong').html(msg_title);
            $(AlertMsg).find('span').html(msg_body);
            $(AlertMsg).removeAttr('class');
            $(AlertMsg).addClass('alert alert-' + msg_type);
            $(AlertMsg).show();
        };
    </script>

    <style>
        /*removing unnecessary style from logout button*/
        .nav > li > a:focus, .nav > li > a:hover {
            text-decoration : underline;
            background-color : unset;
        }
    </style>
</body>
</html>