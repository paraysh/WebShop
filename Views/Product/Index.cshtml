@model IEnumerable<WebShop.Models.ProductModel>
@{
    ViewBag.Title = "Product List";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<script type="text/javascript">
    function AddToCart(item) {
        var itemId = $(item).attr("itemid");
        var formData = new FormData();
        formData.append("ItemId", itemId);

        $.ajax({
            async: true,
            type: 'POST',
            contentType: false,
            processData: false,
            data: formData,
            url: '/Product/AddToCart',
            success: function (data) {
                if (data.Success) {
                    $("#cartItem").text("Cart(" + data.Counter + ")");
                }
            },
            error: function () {
                alert("Something went wrong!");
            }
        });
    }
</script>

<div class="container">
    <h2>Product List</h2>
    <div class="row">
        @foreach (var item in Model)
        {

            <div class="col-md-4" style="border:2px solid black">
                <div style="text-align: center; border-bottom: 2px solid maroon">
                    <h3>@item.Name</h3>
                </div>

                <div class="row">
                    <div class="col-md-8">
                        <img src="~/Content/ItemImages/@item.ImageName" width="100%" height="150px" />
                    </div>
                    <div class="col-md-4" style="text-align:left">
                        <b>@item.Description</b>
                    </div>
                </div>

                <div class="row">
                    <div class="col-md-8" style="font-size: 18px; border-top: 2px solid maroon; padding:2px">
                        <b>@item.Cost</b>
                    </div>

                    <div class="col-md-4" style="text-align: right; margin-bottom: 10px; border-top: 2px solid maroon; padding: 2px">
                        <input type="button" name="AddToCart" value="Add To Cart" class="btn btn-primary" itemid="@item.Id" id="btnAddToCart" onclick="AddToCart(this)" />
                    </div>
                </div>
            </div>

        }
    </div>
</div>