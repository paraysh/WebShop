@model WebShop.Models.LoginModel

@{
    ViewBag.Title = "Log in";
    Layout = "~/Views/Shared/_LayoutLoginPage.cshtml";
}

<h2>Login</h2>

<div class="login-container">
    @using (Html.BeginForm("Login", "Account", new { ReturnUrl = ViewBag.ReturnUrl }, FormMethod.Post, new { role = "form", id = "frmLoginForm" }))
    {
        @Html.AntiForgeryToken()
        @Html.ValidationSummary(true)

        <div class="text-left">
            @Html.LabelFor(m => m.UserName)
            @Html.EditorFor(m => m.UserName, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(m => m.UserName)
        </div>

        <div class="text-left">
            @Html.LabelFor(m => m.Password)
            @Html.PasswordFor(m => m.Password, new { @class = "form-control" })
            @Html.ValidationMessageFor(m => m.Password)
        </div>

        <div class="remember">
            @Html.CheckBoxFor(m => m.RememberMe) @Html.LabelFor(m => m.RememberMe)
        </div>

        <div class="action">
            <input type="submit" class="btn btn-primary" value="LOGIN" data-loading-text="logging..." id="btnSubmit" />
            @*<a href="javascript:void(0)" id="btnSentTestMail">Send Test Mail</a>*@
        </div>
    }
</div>

