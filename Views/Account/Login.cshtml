@model WebShop.Models.LoginModel

@{
    ViewBag.Title = "Log in";
    Layout = "~/Views/Shared/_LayoutLoginPage.cshtml";
}

<style>
    body {
        font-family: "Lato", sans-serif;
    }

    .main-head {
        height: 150px;
        background: #FFF;
        
    }

    .sidenav {
        height: 100%;
        background-color: #000;
        background-image: url('../../webshopicon.png');
        background-position: center;
        overflow-x: hidden;
        padding-top: 20px;
    }

    .main {
        padding: 0px 10px;
    }

    .main {
        margin-left: 40%;
    }

    .sidenav {
        width: 40%;
        position: fixed;
        z-index: 1;
        top: 0;
        left: 0;
    }

    .login-form {
        margin-top: 30%;
    }

    .register-form {
        margin-top: 20%;
    }

    .login-main-text {
        margin-top: 35%;
        padding: 60px;
        color: #fff;
    }

    .login-main-text h2 {
        font-weight: 300;
    }

    .btn-black {
        background-color: #000 !important;
        color: #fff;
    }
</style>

<div class="sidenav">
    
</div>
<div class="main" style="margin-top: 10%;">
    <div class="">
        <h2 style="font-weight: 300; text-decoration: unset; text-align: start;">Fiktiv GmbH</h2>
        <p>Melden Sie sich an, um die Seite zu betreten.</p>
    </div>
    <hr />
    <div class="col-md-6 col-sm-12">
        <div class="login-form">
            @using (Html.BeginForm("Login", "Account", new { ReturnUrl = ViewBag.ReturnUrl }, FormMethod.Post, new { role = "form", id = "frmLoginForm" }))
            {
                @Html.AntiForgeryToken()
                @Html.ValidationSummary(true)

                <div class="text-left">
                    @Html.LabelFor(m => m.UserName)
                    @Html.EditorFor(m => m.UserName, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(m => m.UserName)
                </div>

                <div class="text-left">
                    @Html.LabelFor(m => m.Password)
                    @Html.PasswordFor(m => m.Password, new { @class = "form-control" })
                    @Html.ValidationMessageFor(m => m.Password)
                </div>

                <div class="remember">
                    @Html.CheckBoxFor(m => m.RememberMe) @Html.LabelFor(m => m.RememberMe)
                </div>

                <div class="action">
                    <input type="submit" class="btn btn-primary" value="Anmelden" data-loading-text="logging..." id="btnSubmit" />
                </div>
            }
        </div>
    </div>
</div>
